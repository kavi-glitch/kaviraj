import java.awt.*;
import java.awt.event.*;

public class ShapeBtn extends Frame implements ActionListener {
    Button c,s;
    boolean circle=false, square=false;

    ShapeBtn() {
        setLayout(new FlowLayout());
        add(c=new Button("Circle"));
        add(s=new Button("Square"));
        c.addActionListener(this);
        s.addActionListener(this);
        setSize(400,300);
        setVisible(true);
    }

    public void actionPerformed(ActionEvent e) {
        if(e.getSource()==c) circle=true;
        if(e.getSource()==s) square=true;
        repaint();
    }

    public void paint(Graphics g) {
        if(circle) g.drawOval(100,100,80,80);
        if(square) g.drawRect(220,100,80,80);
    }

    public static void main(String[] a) {
        new ShapeBtn();
    }
}
