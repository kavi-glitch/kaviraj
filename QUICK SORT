//quick sort
#include <stdio.h>

int a[50], n, i;

void q(int f, int l)
{
    int i=f, j=l, p=a[f], t;
    if(f<l){
        while(i<j){
            while(a[i]<=p && i<l) i++;
            while(a[j]>p) j--;
            if(i<j){ t=a[i]; a[i]=a[j]; a[j]=t; }
        }
        t=a[f]; a[f]=a[j]; a[j]=t;
        q(f,j-1); q(j+1,l);
    }
}

int main(void)
{
    printf("\n......Quick Sort.....\n");
    printf("\nEnter the no. of elements you want to sort\n");
    scanf("%d",&n);
    printf("\nEnter the %d elements:\n",n);
    for(i=0;i<n;i++) scanf("%d",&a[i]);
    q(0,n-1);
    printf("\nElements sorted by Quick sort are:\n");
    for(i=0;i<n;i++) printf("%d\n",a[i]);
    return 0;
}
